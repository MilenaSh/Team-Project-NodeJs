mixin nav
    nav#my-navbar.navbar.navbar-inverse.navbar-custom.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                    // Collapses the nav buttons for smaller screens
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/#!/')
                    img#myLogo(src='/static/images/logo.png', alt='Page logo')
            #navbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href='/') Home
                    li
                        a(href='/about') About
                    li
                        a(href='/#!/sightseeing') Sightseeing
                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a#register-link.dropdown-toggle(href='#', data-toggle='dropdown')
                            | Register 
                            | Log In 
